{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",  
      "use": "@vercel/node"
    },
    {
      "src": "client/**/*",   
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"   
    },
    {
      "src": "/(.*)",
      "dest": "client/index.html", 
      "headers": {
        "Cache-Control": "s-maxage=86400"
      }
    }
  ]
}